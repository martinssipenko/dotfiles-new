# ~/.config/ghostty/config

# Online documentation:
# https://ghostty.org/docs/config/reference

auto-update-channel=tip

theme="Tomorrow Night"
font-family="JetBrains Mono"
font-size=14
font-thicken=true
font-thicken-strength=100
cursor-style=block
cursor-style-blink=false
